<%- include("./partials/header") %>

    <head>
        <link rel="stylesheet" href="../public/css/main.css">
    </head>

    <div class="body" id="top">

        <section class="content">

            <section class="hero ">
                <h1 class="title">
                    <%= movieData.Title %>
                </h1>
            </section>

            <div class="grid">

                <section class="col-2-3">

                    <section class="row">

                        <h2>
                            <%= movieData.Released %> , IMDB Rating : <%= movieData.imdbRating %>
                        </h2>
                        <br>
                        <div class="design">
                            <h4>RunTime : <%= movieData.Runtime %>
                            </h4>
                            <h4>Genre : <%= movieData.Genre %>
                            </h4>
                            <h4>Director : <%= movieData.Director %>
                            </h4>
                        </div>


                    </section>

                    <section class="actors row">

                        <h2> Major Actors </h2>
                        <div class="design">
                            <p>
                                <% string_to_array=function (str) { return str.trim().split(","); }; %>
                                    <ul>
                                        <% string_to_array(movieData.Actors).forEach(function(str){ %>
                                            <li>
                                                <%=str%>
                                            </li>
                                            <% }) %>
                                    </ul>
                            </p>
                        </div>

                    </section>
                </section><!--
            
                --><section class=" col-1-3">

                    <img src="<%=movieData.Poster%>" class="img" alt="No Poster Available">

                </section>

            </div>

            <section class="plot ">
                <h2> Plot : </h2>
                <p>
                    <%= movieData.Plot %>
                </p>
            </section>

        </section>
        <div class="bottom">
            <a href="#top">Back to Top</a>
            <h5> &copy; Jimmy Corporations Ltd. </h5>
        </div>
    </div>
    <%- include("./partials/footer") %>